{
  "version": 2,
  "cli": { "defaultCollection": "@nrwl/react" },
  "generators": { "@nrwl/react": { "application": { "babel": true } } },
  "projects": {
    "ui-kit": {
      "root": "libs/ui-kit",
      "sourceRoot": "libs/ui-kit/src",
      "projectType": "library",
      "targets": {
        "lint": {
          "executor": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": ["libs/ui-kit/**/*.{ts,tsx,js,jsx}"]
          }
        },
        "test": {
          "executor": "@nrwl/jest:jest",
          "outputs": ["coverage/libs/ui-kit"],
          "options": {
            "jestConfig": "libs/ui-kit/jest.config.js",
            "passWithNoTests": true
          }
        },
        "storybook": {
          "executor": "@nrwl/storybook:storybook",
          "options": {
            "uiFramework": "@storybook/react",
            "port": 4400,
            "config": { "configFolder": "libs/ui-kit/.storybook" }
          },
          "configurations": { "ci": { "quiet": true } }
        },
        "build-storybook": {
          "executor": "@nrwl/storybook:build",
          "outputs": ["{options.outputPath}"],
          "options": {
            "uiFramework": "@storybook/react",
            "outputPath": "dist/storybook/ui-kit",
            "config": { "configFolder": "libs/ui-kit/.storybook" }
          },
          "configurations": { "ci": { "quiet": true } }
        }
      }
    }
  }
}
